{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/vscode-typescript-to-lua/master/tsconfig-schema.json",
  "include": ["src/**/*"],
  "tstl": {
    "noImplicitSelf": true
  },
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext"],
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "typeRoots": ["src/model", "./node_modules/@types"],
    "types": ["typescript-to-lua/language-extensions"],
    "outDir": "./dist",
    "strict": true
  }
}
